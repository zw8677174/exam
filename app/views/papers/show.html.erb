<link rel="stylesheet" type="text/css" href="/static/css/paper_show/normalize.css" />
<link rel="stylesheet" type="text/css" href="/static/css/paper_show/demo.css" />
<link rel="stylesheet" type="text/css" href="/static/css/paper_show/component.css" />
<script src="/static/js/paper_show/modernizr.custom.25376.js"></script>
<div id="perspective" class="perspective effect-movedown">
  <div class="container">
    <div class="wrapper"><!-- wrapper needed for scroll -->
      <header class="codrops-header">
        <h1><%= @paper.name %><span><%= @paper.title %></span></h1>
      </header>
      <div class="main clearfix">
        <div class="column">
          <p><button id="showMenu">目录</button></p>
          <p><%= @paper.description %></p>
        </div>
        <div class="column">
          <nav class="codrops-demos">
            <a href="" class="current-demo">发送测试链接</a>
            <a href="" >查看该试卷的测评结果</a>
          </nav>
        </div>
      </div><!-- /main -->
    </div><!-- wrapper -->
    <nav class="paper-show-menu paper-show-menu--adsila">
      <% @questions.each do |question| %>
          <a class="paper-show-menu__item" href="<%= url_for(paper_question_path(@paper, question)) %>">
            <span class="paper-show-menu__item-name">第一题<%= question.title %></span>
            <span class="paper-show-menu__item-label"><%= question.body %></span>
          </a>
      <% end %>
    </nav>
  </div><!-- /container -->
  <nav class="outer-nav top horizontal">
    <a href="<%= url_for(papers_url) %>" class="icon-home">Home</a>
    <!--<a href="#" class="icon-news">News</a>-->
    <!--<a href="#" class="icon-image">Images</a>-->
    <a href="<%= url_for(edit_paper_url) %>" class="icon-upload">Edit</a>
    <!--<a href="#" class="icon-star">Favorites</a>-->
    <!--<a href="#" class="icon-mail">Messages</a>-->
    <!--<a href="#" class="icon-lock">Security</a>-->
  </nav>
</div>


<script src="/static/js/paper_show/classie.js"></script>
<script src="/static/js/paper_show/menu.js"></script>